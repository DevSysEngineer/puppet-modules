# Managed by puppet

# Alias definitions.
if [ -f ~/.bash_aliases ]; then
    . ~/.bash_aliases
fi

# Enable programmable completion features 
if [ -f /etc/bash_completion ] && ! shopt -oq posix; then
    . /etc/bash_completion
fi

# Custom alias definitions.
if [ -f ~/.bash_aliases_custom ]; then
    . ~/.bash_aliases_custom
fi

# Add /opt/puppetlabs/bin to the path 
if [ -d /opt/puppetlabs/bin ]; then
    if [ -z "${PATH-}" ] ; then
        export PATH=/opt/puppetlabs/bin
    elif ! echo "${PATH}" | grep -q /opt/puppetlabs/bin ; then
        export PATH="${PATH}:/opt/puppetlabs/bin"
    fi
fi
